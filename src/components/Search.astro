<script>
document.getElementById("buscar")?.addEventListener("click", cargarDatos);

async function cargarDatos() {
  const titulo = (document.getElementById("titulo") as HTMLInputElement).value;
  const cantidad = (document.getElementById("cantidad") as HTMLSelectElement).value;
  const pagina = (document.getElementById("pagina") as HTMLSelectElement).value;

  try {
    const parametros = new URLSearchParams({
      title: titulo,
      page: pagina,
      limit: cantidad
    });

    const res = await fetch("https://openlibrary.org/search.json?" + parametros.toString());
    const data = await res.json();
    
    console.log(data.docs);

    const evento=new CustomEvent("resultado",{
        detail:data.docs
    })

    dispatchEvent(evento);
  } catch (error) {
    console.error("Error:", error);
  }
}


</script>
