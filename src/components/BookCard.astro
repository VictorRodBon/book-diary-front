---
import type { Book } from "../types/Book";
const { book } = Astro.props;
---

<div class="card">
  <div class="cover">
    {
      book.cover_id ? (
        <img
          src={`https://covers.openlibrary.org/b/id/${book.cover_id}-M.jpg`}
          alt={book.title}
        />
      ) : (
        <div class="no-cover">Sin portada</div>
      )
    }
    <div class="book-info">
      <h3 class="title">{book.title}</h3>
      <p class="author">{book.author}</p>
      <p class="year">{book.year ?? "AÃ±o desconocido"}</p>
    </div>
    <div class="detalle"></div>
    <div class="actions">
      <slot />
    </div>
  </div>
</div>

<style>
  .card {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    border-radius: 12px;
    background: #fafafa;
    border: 1px solid #e5e5e5;
    transition:
      background 0.2s ease,
      border-color 0.2s ease;
  }

  .card:hover {
    background: #f5f5f5;
    border-color: #dcdcdc;
  }

  .cover{
    width: 90%;
  }
  
  .cover img {
    width: 95px;
    height: 140px;
    object-fit: cover;
    border-radius: 8px;
  }

  .no-cover {
    width: 95px;
    height: 140px;
    background: #eaeaea;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #777;
    font-size: 0.85rem;
  }

  .book-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .title {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: #222;
  }

  .author {
    margin: 0;
    color: #555;
    font-size: 0.95rem;
  }

  .year {
    color: #777;
    font-size: 0.85rem;
    margin-bottom: 0.6rem;
  }

  .actions {
    display: flex;
    gap: 0.5rem;
    margin-top: auto;
  }

  .flip {
    transform: rotateY(180deg);
  }

  .container {
    display: flex;
    gap: 0.5rem;
  }

</style>
